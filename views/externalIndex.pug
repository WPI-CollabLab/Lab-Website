doctype html

include common

html(lang=en)
    head
        title WPI Collablab - Status
        script(src='/js/jquery.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
        script(src='/js/bootstrap.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
        link(href='/css/signin.css', rel='stylesheet')
        link(href='/css/bootstrap.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous', rel='stylesheet')
        link(href='/css/bootstrap-theme.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous', rel='stylesheet')
        link(href='css/collab.css', rel='stylesheet')
    body
        nav.navbar.navbar-default
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Home

                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/schedule') Scheduled Lab Hours
                    .navbar-form.navbar-right
                        button.pull-right.btn.btn-primary(style='display:inline;' onClick='login()')
                            span.glyphicon.glyphicon-log-in(style='padding-right:7px;')  "Management"
        .container
            row
                .col-sm-12
                    center
                        h1 CollabLab is a student run MakerSpace at WPI
            row
                .col-sm-12.top10
                    img(src="images/logo.jpg").img-responsive.center-block
            row
                .col-sm-12.top10
                    center
                        h1
                            | The lab is currently&nbsp;
                            strong
                                span(id='isOpen')
            row
                .col-sm-6.col-md-offset-3.top40
                    .panel.panel-primary
                        .panel-heading Who is in the lab?
                        .panel-body
                            h4
                                ul.list-group
                                    div(id='who')
        if user && user.labMonitor === 'true'
            #kickModal.modal.fade(aria-hidden='true', tabindex='-1', role='dialog', aria-labelledby='kickingLabel')
                .modal-dialog.modal-md
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='kickModal')
                            input.hidden(type='text', id='idNumber')
                            h3 Confirm that you want to kick&nbsp;
                                span(id='kickName')
                                br
                                small Confirm that you want to kick the user.
                        .modal-body
                            button.btn.btn-lg.btn-danger.btn-block(type='submit' onClick='kickUser()') Kick

        script(src='/js/common.js')
        script(src='/js/external.js')
        script(src='/js/notify.js')
        if user && user.labMonitor === 'true'
            script
                | kicking = true;
